<UserControl x:Class="PSTimeTracker.RestoreDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PSTimeTracker"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="210">



    <Grid Margin="4" >
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Restore previous record?" HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontFamily="{StaticResource RobotoLight}" FontSize="18"/>

        <Grid Grid.Row="1" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Margin="0 4 4 0" Content="Yes" Background="#60ffffff"
                        Command="{Binding RestoreAndStartCommand}" Click="Button_Click"/>
            <Button Grid.Column="1" Margin="4 4 0 0" Content="No" Background="#60ffffff"
                        Command="{Binding StartWithoutRestoringCommand}" Click="Button_Click"/>
        </Grid>

    </Grid>
</UserControl>
