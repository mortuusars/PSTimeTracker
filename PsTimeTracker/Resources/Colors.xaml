<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--MAIN-->
    <SolidColorBrush x:Key="MainBorderBrush" Color="#777"/>
    
    <SolidColorBrush x:Key="HeaderBorderBrush" Color="#a2a2a2"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#f9f9f9"/>
    <SolidColorBrush x:Key="InactiveHeaderBackgroundBrush" Color="#f1f1f1"/>
    <SolidColorBrush x:Key="HeaderForegroundBrush" Color="#5d5d5d"/>

    <SolidColorBrush x:Key="MainForegroundBrush" Color="#777"/>

    
    <!-- Tracked Files -->
    <SolidColorBrush x:Key="ListItemBGBrush" Color="#eee"/>
    <SolidColorBrush x:Key="ListItemBGActiveBrush" Color="#c0d8f0"/>
    <SolidColorBrush x:Key="ListItemBorderMouseOverBrush" Color="#222"/>
    <SolidColorBrush x:Key="ListItemBGSelectedBrush" Color="#90c0f0"/>
    <SolidColorBrush x:Key="ListItemFGSelectedBrush" Color="#444"/>

    <!-- Gradient -->
    <LinearGradientBrush x:Key="MainGradient" StartPoint="0.5, 0" EndPoint="0.5, 400" 
                             MappingMode="Absolute" ColorInterpolationMode="ScRgbLinearInterpolation">
        <GradientStop Color="#e9e9e9" Offset="0"/>
        <GradientStop Color="#d6d6d6" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>